@*@model IEnumerable<BookModel>*@
@{
    ViewData["Title"] = "All Books";
}

<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm ">
                    <svg class="bd-placeholder-img card-img-top bg-dark" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="XminYmin"></svg>
                    <div class="card-body ">
                        <h5 class="card-title">@book.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@book.Category</h6>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Book/GetBook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

